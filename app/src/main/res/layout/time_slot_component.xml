<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/appHometheme">

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"> <LinearLayout
        android:layout_width="100dp" android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginEnd="4dp" >
        <RelativeLayout
            android:id="@+id/date_slot_container_1" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_slot_bg"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="TouchTargetSizeCheck"
            >
            <TextView
                android:id="@+id/weekday1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAT"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/weekday1"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/month1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@id/date1"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/overlay1" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/gradiant_overlay"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false"
                />
        </RelativeLayout>
    </LinearLayout>

        <LinearLayout
