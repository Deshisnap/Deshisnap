                    android:clickable="false" android:focusable="false" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginEnd="4dp"
            >
            <RelativeLayout
                android:id="@+id/date_slot_container_6" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/time_slot_bg" android:padding="8dp"
