<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#00FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#25415A"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/dp_card"
                    android:layout_width="75dp"
                    android:layout_height="74dp"
                    android:backgroundTint="#25415A"
                    app:cardCornerRadius="100dp"
                    android:layout_margin="10dp"
                    >
                    <ImageView
                        android:id="@+id/dp_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/electrician"
                        >
                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/user_name"  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hrusikesh Kar"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dp_card"
                    android:textFontWeight="700"
                    android:textSize="18sp"
                    android:fontFamily="@string/font"
                    android:layout_marginLeft="60dp"
                    >
                </TextView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4D5C84"
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >
                <TextView
                    android:id="@+id/transition_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role           : User" android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    >
                </TextView>

                <TextView
                    android:id="@+id/booking_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone No : "
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    >
                </TextView>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email       :"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    >
                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/unblock_button"
                    android:layout_width="136dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="#558B2F"
                    app:cardCornerRadius="9.29dp"
                    android:clickable="true"
                    android:focusable="true"
                    tools:ignore="TouchTargetSizeCheck"
                    android:visibility="visible"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UNBLOCK"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:padding="4dp"
                            android:fontFamily="@string/font"
                            android:textFontWeight="700"
                            >
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/block_button"
                    android:layout_width="136dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="#CC2929"
                    app:cardCornerRadius="9.29dp"
                    android:clickable="true"
                    android:focusable="true"
                    tools:ignore="TouchTargetSizeCheck"
                    android:visibility="invisible"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLOCK"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:padding="4dp"
                            android:fontFamily="@string/font"
                            android:textFontWeight="700"
                            >
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/delete_button"
                    android:layout_width="136dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#466D8F"
                    app:cardCornerRadius="9.29dp"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    tools:ignore="TouchTargetSizeCheck"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delete"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:padding="4dp"
                            android:fontFamily="@string/font"
                            android:textFontWeight="700"
                            >
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>