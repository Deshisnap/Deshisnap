<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appHometheme">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_mark"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        >

    </ImageView>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/deshi_snap_icon"
        android:layout_centerHorizontal="true"
        />



    <LinearLayout
        android:layout_below="@id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp">

        <!-- Company Title -->
        <TextView
            android:id="@+id/company_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deshi Snap"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            />

        <!-- Location -->
        <TextView
            android:id="@+id/company_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Based in Berhampur, Odisha"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>

        <!-- About Description -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:background="@color/appHometheme"
            >

           <TextView
               android:id="@+id/company_desc"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Deshi Snap is your trusted partner for reliable home and lifestyle services. We connect you with skilled professionals across various trades, ensuring quality and convenience at your doorstep."
               android:background="@color/appHometheme"
               android:textColor="@color/textcolor"
               android:textSize="20sp"
               android:textStyle="italic"
               android:textAlignment="center"
               />




        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/company_supportgmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="deshisnap247service@gmail.com"
            android:background="@color/appHometheme"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textAlignment="center"
            />

    </LinearLayout>
</RelativeLayout>
</RelativeLayout>
