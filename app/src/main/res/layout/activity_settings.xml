<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appHometheme"
    android:padding="16dp"
    android:gravity="center_horizontal">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Edit Profile Settings"
      android:textSize="24sp"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:layout_marginBottom="24dp"
      android:layout_marginTop="24dp"/>

  <EditText
      android:id="@+id/settings_name_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Name"
      android:textColorHint="#CCCCCC"
      android:textColor="@color/white"
      android:backgroundTint="@color/white"
      android:padding="12dp"
      android:layout_marginBottom="16dp"
      android:inputType="textPersonName" />

  <EditText
      android:id="@+id/settings_email_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Email ID"
      android:textColorHint="#CCCCCC"
      android:textColor="@color/white"
      android:backgroundTint="@color/white"
      android:padding="12dp"
      android:layout_marginBottom="16dp"
      android:inputType="textEmailAddress" />

  <EditText
      android:id="@+id/settings_phone_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Phone Number"
      android:textColorHint="#CCCCCC"
      android:textColor="@color/white"
      android:backgroundTint="@color/white"
      android:padding="12dp"
      android:layout_marginBottom="24dp"
      android:inputType="phone" />

  <EditText
      android:id="@+id/settings_location_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Address/Location"
      android:textColorHint="#CCCCCC"
      android:textColor="@color/white"
      android:backgroundTint="@color/white"
      android:padding="12dp"
      android:layout_marginBottom="24dp"
      android:inputType="textPostalAddress" />


  <Button
      android:id="@+id/save_settings_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Save Changes"
      android:textColor="@color/white"
      android:backgroundTint="@color/nav_item_active"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      android:textSize="18sp"/>

</LinearLayout>