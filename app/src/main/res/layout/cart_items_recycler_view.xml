<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    >

    <TextView
    android:id="@+id/item_service_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_toStartOf="@+id/item_delete_button"
    android:layout_marginEnd="16dp"
    android:text="Bath Accessory Installation"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:textFontWeight="500"
    android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/item_service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_service_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:text="Rs. 100"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        android:textFontWeight="700"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/item_advance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_service_price"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:text="Advance: Rs. 0.00"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textFontWeight="500"
        android:fontFamily="sans-serif" />

    <ImageView
        android:id="@+id/item_delete_button"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/dustbin"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Delete item from cart" />

</RelativeLayout>
