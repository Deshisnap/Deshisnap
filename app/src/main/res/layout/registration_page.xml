<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="396dp"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        app:cardBackgroundColor="@color/overlay"
        app:cardCornerRadius="21dp"
        android:elevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/registration_page_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell us About Your self !"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textFontWeight="600"
                android:fontFamily="@string/font"
                android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"

                >
            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/registration_page_heading"
                android:layout_margin="20dp"
                >

                <TextView
                    android:id="@+id/first_name_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name*"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/first_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/otp_box_colour"
                    android:hint="Enter First Name"
                    android:textColorHint="#C1FFFFFF"
                    android:textColor="@color/white"
                    android:paddingStart="12dp"
                    android:background="@drawable/edit_text_dark_bg"
                    android:inputType="textPersonName"
                    android:layout_below="@id/first_name_heading"
                    />
                <TextView
                    android:id="@+id/last_name_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="last Name*"
                    android:textColor="@color/white"
                    android:layout_below="@id/first_name_input"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:id="@+id/last_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/otp_box_colour"
                    android:hint="Enter Last Name"
                    android:textColorHint="#C1FFFFFF"
                    android:textColor="@color/white"
                    android:paddingStart="12dp"
                    android:background="@drawable/edit_text_dark_bg"
                    android:inputType="textPersonName"
                    android:layout_below="@id/last_name_heading"
                    />


                <TextView
                    android:id="@+id/email_address_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Email Address*"
                    android:textColor="@color/white"
                    android:layout_below="@id/last_name_input"
                    android:layout_marginTop="10dp"

                    />

                <EditText
                    android:id="@+id/email_address_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/otp_box_colour"
                    android:hint="Enter email address"
                    android:textColorHint="#C1FFFFFF"
                    android:textColor="@color/white"
                    android:paddingStart="12dp"
                    android:background="@drawable/edit_text_dark_bg"
                    android:inputType="textEmailAddress"
                    android:layout_below="@id/email_address_heading"
                    />

                <TextView
                    android:id="@+id/phone_number_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number*"
                    android:textColor="@color/white"
                    android:layout_below="@id/email_address_input"
                    android:layout_marginTop="10dp"

                    />

                <RelativeLayout
                    android:id="@+id/phone_number_Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phone_number_heading"
                    >

                    <EditText
                        android:id="@+id/country_code"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/otp_box_colour"
                        android:hint="+91"
                        android:textColorHint="#C1FFFFFF"
                        android:textColor="@color/white"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:background="@drawable/edit_text_dark_bg"
                        android:inputType="textPersonName"
                        />

                    <EditText
                        android:id="@+id/phone_number_input"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/otp_box_colour"
                        android:hint="Enter your phone Number"
                        android:textColorHint="#C1FFFFFF"
                        android:textColor="@color/white"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:background="@drawable/edit_text_dark_bg"
                        android:inputType="number"
                        android:layout_alignParentEnd="true"
                        />


                </RelativeLayout>



                <TextView
                    android:id="@+id/Location_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Address*"
                    android:textColor="@color/white"
                    android:layout_below="@id/phone_number_Layout"
                    android:layout_marginTop="10dp"

                    />

                <EditText
                    android:id="@+id/Location_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/otp_box_colour"
                    android:hint="Home address"
                    android:textColorHint="#C1FFFFFF"
                    android:textColor="@color/white"
                    android:paddingStart="12dp"
                    android:background="@drawable/edit_text_dark_bg"
                    android:inputType="textPersonName"
                    android:layout_below="@id/Location_heading"
                    />

                <TextView
                    android:id="@+id/register_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_below="@id/Location_input"
                    android:layout_margin="25dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:padding="5dp"
                    >

                </TextView>


            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
