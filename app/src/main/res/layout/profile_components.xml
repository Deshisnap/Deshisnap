<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/appHometheme">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/manage_address_button"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="TouchTargetSizeCheck"
        android:background="@drawable/ripple_bg"
        >

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/location"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/manage_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Manage_addres"
            android:layout_marginLeft="38dp"
            android:textFontWeight="400"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/location_icon"
            android:layout_centerVertical="true"
            >

        </TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_mark"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            >
        </ImageView>
    </RelativeLayout>



    <!-- Logout Row -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/logout_button"
        android:layout_below="@id/about_us_button"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="TouchTargetSizeCheck"
        android:background="@drawable/ripple_bg">

        <ImageView
            android:id="@+id/logout_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Logout"
            android:layout_marginLeft="38dp"
            android:textFontWeight="400"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/logout_icon"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_mark"
            android:layout_centerVertical="true"
            android:paddingRight="15dp" />
    </RelativeLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/setting_button"
        android:layout_below="@id/manage_address_button"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="TouchTargetSizeCheck"
        android:background="@drawable/ripple_bg"
        >

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/symbols_settings"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Setting"
            android:layout_marginLeft="38dp"
            android:textFontWeight="400"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/setting_icon"
            android:layout_centerVertical="true"
            >

        </TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_mark"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/costomer_service_button"
        android:layout_below="@id/setting_button"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="TouchTargetSizeCheck"
        android:background="@drawable/ripple_bg"
        >

        <ImageView
            android:id="@+id/service_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/support_care"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/service_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Help &amp; Support"
            android:layout_marginLeft="38dp"
            android:textFontWeight="400"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/service_icon"
            android:layout_centerVertical="true"
            >

        </TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_mark"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/about_us_button"
        android:layout_below="@id/costomer_service_button"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="TouchTargetSizeCheck"
        android:background="@drawable/ripple_bg"
        >

        <ImageView
            android:id="@+id/about_us_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ix_about"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/about_us_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="About Us"
            android:layout_marginLeft="38dp"
            android:textFontWeight="400"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/about_us_icon"
            android:layout_centerVertical="true"
            >

        </TextView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_mark"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            >
        </ImageView>
    </RelativeLayout>



</RelativeLayout>