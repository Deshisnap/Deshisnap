<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="10dp"
   > <TextView
    android:id="@+id/offer_description_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_toStartOf="@+id/offer_apply_button"
    android:layout_marginEnd="16dp"
    android:text="Get 20% off on all services!"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:textFontWeight="500"
    android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/offer_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/offer_description_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:text="Code: SAVE20"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"/> <Button
        android:id="@+id/offer_apply_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Apply"
        android:textSize="12sp"
        android:paddingHorizontal="10dp"
        android:backgroundTint="@color/nav_item_active"
        android:textColor="@color/white"/>

</RelativeLayout>