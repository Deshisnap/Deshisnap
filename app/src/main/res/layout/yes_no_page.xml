<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appHometheme"

    >
    <TextView
        android:id="@+id/payment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Summary"
        android:textSize="20sp"
        android:textFontWeight="700"
        android:textColor="@color/textcolor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        >
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2F7889"
        android:layout_below="@id/payment_text"
        app:cardCornerRadius="10dp"
        android:layout_margin="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            >

            <TextView
                android:id="@+id/tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are You Sure ?"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"

                >

            </TextView>

            <RelativeLayout
                android:id="@+id/yes_no_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tag_text"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp"
                >


                <TextView
                    android:id="@+id/no_button"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:text="No"
                    android:textSize="25dp"
                    android:textFontWeight="500"
                    android:layout_centerVertical="true"
                   android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/no_bg"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    >

                </TextView>

                <TextView
                    android:id="@+id/yes_button"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Yes"
                    android:textSize="25dp"
                    android:textFontWeight="500"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:background="@drawable/yes_bg"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    >

                </TextView>

            </RelativeLayout>


        </RelativeLayout>





    </androidx.cardview.widget.CardView>


</RelativeLayout>