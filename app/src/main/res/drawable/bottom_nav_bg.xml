<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Gradient background -->
    <gradient
        android:type="linear"
        android:angle="270"
        android:startColor="#00FEFEFE"
        android:endColor="#04FDAA"

    />
    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Stroke (border) -->
    <stroke
        android:width="0dp"
        android:color="#3A1B79" />  <!-- White border -->
</shape>
