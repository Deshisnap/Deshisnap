<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Semi-transparent black background -->
    <solid android:color="#0EE2E0E0" /> <!-- 50% transparent black -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Light stroke for glass effect -->
    <stroke
        android:width="2dp"
        android:color="#40FFFFFF" /> <!-- faint white border -->

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
